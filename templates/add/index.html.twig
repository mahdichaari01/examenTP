{% extends 'base.html.twig' %}

{% block title %}Hello AddController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajouter un etudiant âœ…</h1>

    <form action="{%block edit%}/add{%endblock%}" method="POST">
        <div class="form-group">
            <label for="nom">nom</label>
            <input name="nom" class="form-control" id="nom" placeholder="Nom" {% block nom %}{% endblock %}>
        </div>
        <div class="form-group">
            <label for="prenom" >Prenom</label>
            <input name="prenom" class="form-control" id="prenom" placeholder="Prenom"  {% block prenom %}{% endblock %}>
        </div>
        <div class="form-group">
            <label for="section">Section</label>
            <select name="section" id="section" class="custom-select">
                <option selected>Selectionner Section</option>
                {%for section in sections%}
                <option value="{{section.id}}" {%block section%}{%endblock%}>
                    {{section.designation}}
                </option>
                {%endfor%}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{% endblock %}
